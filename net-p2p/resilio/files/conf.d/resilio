# conf.d file for resilio

# User and group daemon runs as
RESILIO_USER="resilio"
RESILIO_GROUP="resilio"

NAME="Resilio Sync"
SYNC_NAME="resilio"
SYNC_PATH="/opt/${SYNC_NAME}/"
SYNC_BINARY="${SYNC_PATH}/rslsync"
SYNC_OPTS="--config /etc/${SYNC_NAME}/config"
SYNC_PIDFILE="/var/run/resilio/${SYNC_NAME}.pid"
