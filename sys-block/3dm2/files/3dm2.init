depend() {
        need net
}

start() {
        ebegin "Starting 3dm2"
        start-stop-daemon --start --quiet --exec /usr/sbin/3dm2
        eend ${?}
}

stop() {
        ebegin "Stopping 3dm2"
        start-stop-daemon --stop --quiet --name 3dm2
        eend ${?}
}
