depend() {

	need net

}

start() {

       checkpath --directory --owner maxscale /run/maxscale
       checkpath --directory --owner maxscale /var/log/maxscale	

       ebegin "Starting Maxscale"
       start-stop-daemon --start --pidfile ${MAXSCALE_PIDFILE} --user ${MAXSCALE_USER} \
       --name maxscale ${MAXSCALE_DAEMON}
       eend $?

}

stop() {

      ebegin "Stoping Maxscale"
      start-stop-daemon --stop --pidfile ${MAXSCALE_PIDFILE} --name maxscale
      eend $?

}
