--- redis.conf_orig	2013-08-06 11:22:34.000000000 +0400
+++ redis.conf	2013-08-06 11:27:23.000000000 +0400
@@ -15,9 +15,9 @@
 # By default Redis does not run as a daemon. Use 'yes' if you need it.
 # Note that Redis will write a pid file in /var/run/redis.pid when daemonized.
-daemonize no
+daemonize yes
 
 # When running daemonized, Redis writes a pid file in /var/run/redis.pid by
 # default. You can specify a custom pid file location here.
-pidfile /var/run/redis.pid
+pidfile /var/run/redis/redis.pid
 
 # Accept connections on the specified port, default is 6379.
@@ -33,5 +33,5 @@ port 6379
 #
 # bind 192.168.1.100 10.0.0.1
-# bind 127.0.0.1
+bind 127.0.0.1
 
 # Specify the path for the unix socket that will be used to listen for
@@ -59,5 +59,5 @@ timeout 0
 #
 # A reasonable value for this option is 60 seconds.
-tcp-keepalive 0
+tcp-keepalive 30
 
 # Specify the server verbosity level.
@@ -72,5 +72,5 @@ loglevel notice
 # Redis to log on the standard output. Note that if you use standard
 # output for logging but daemonize, logs will be sent to /dev/null
-logfile ""
+logfile /var/log/redis/redis.log
 
 # To enable logging to the system logger, just set 'syslog-enabled' to yes,
@@ -146,5 +146,5 @@ rdbchecksum yes
 
 # The filename where to dump the DB
-dbfilename dump.rdb
+dbfilename /var/lib/redis/dump.rdb
 
 # The working directory.
@@ -156,5 +156,5 @@ dbfilename dump.rdb
 # 
 # Note that you must specify a directory here, not a file name.
-dir ./
+dir /var/lib/redis/
 
 ################################# REPLICATION #################################
@@ -294,4 +294,5 @@ slave-priority 100
 # By default min-slaves-to-write is set to 0 (feature disabled) and
 # min-slaves-max-lag is set to 10.
+min-slaves-max-lag 0
 
 ################################## SECURITY ###################################
@@ -366,4 +367,5 @@ slave-priority 100
 #
 # maxmemory <bytes>
+maxmemory 67108864
 
